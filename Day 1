class Solution {
    public int maxArea(int[] height) {
        int l=0,r=height.length-1,maxarea=0;
        while(l<r)
        {
            int h=Math.min(height[l],height[r]);
            int area=(r-l)*h;
            maxarea=Math.max(area,maxarea);
            if(height[l]<height[r])
                l++;
            else 
                r--;
        }
        return maxarea;
    }
}
