class Solution {
    public boolean isPossible(long a[], long b[], int n, long k) {
        // Your code goes here
        Arrays.sort(a);
        reverseArray(a);
        Arrays.sort(b);
        for(int i=0;i<n;i++)
        {
            if(a[i]+b[i]<k)
            return false;
        }
        return true;
    }
    private void reverseArray(long[] array) 
    {
        int left=0;
        int right=array.length-1;
        while(left<right) 
        {
            long temp=array[left];
            array[left]=array[right];
            array[right]=temp;
            left++;
            right--;
        }
    }
}
